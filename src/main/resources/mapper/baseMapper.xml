<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="htmap.pjmanage.dao.BaseDao">

    <delete id="deleteById">
        DELETE FROM ${table} where id=#{id}
    </delete>

    <select id="query" resultType="java.util.Map">
        select * from ${table}
        <where>
            1=1
            <if test="equalWhere != null">
                <foreach collection="equalWhere.entrySet()" index="key" item="value" separator=" ">
                    and ${key} = #{value}
                </foreach>
            </if>
            <if test="likeWhere != null">
                <foreach collection="likeWhere.entrySet()" index="key" item="value" separator=" ">
                    and ${key} like CONCAT('%',#{value},'%')
                </foreach>
            </if>
            <if test="scopeWhere != null">
                <foreach collection="scopeWhere.entrySet()" index="key" item="value" separator=" ">
                    and (${key} between #{value[0]} and #{value[1]})
                </foreach>
            </if>
            <if test="orderBy != null">
                order by ${orderBy}
            </if>
        </where>
    </select>

</mapper>